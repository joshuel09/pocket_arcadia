<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="josusama.corp.pocketarcadia.Arcadeonetut">

    <TextView
        android:id="@+id/how"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="HOW TO PLAY"
        android:textAlignment="center"
        android:textColor="#ffea00"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="The main goal of this game is to shoot the incoming meteor and enemies coming towards you. To control the ship, just tilt your phone left and right. You only have one life so aim and shoot!"
        android:textAlignment="center"
        android:textColor="#f7f6f0"
        android:textSize="30dp" />



</LinearLayout>
